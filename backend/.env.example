# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/movie_catalog
MONGODB_TEST_URI=mongodb://localhost:27017/movie_catalog_test

# Server Configuration
PORT=3000
NODE_ENV=development

# TMDB API Configuration
TMDB_API_KEY=a6782570c4e5660c5b15989fe4174009
TMDB_BASE_URL=https://api.themoviedb.org/3

# JustWatch Configuration
JUSTWATCH_BASE_URL=https://apis.justwatch.com/content
JUSTWATCH_REGION=en_IN
JUSTWATCH_LANGUAGE=en

# Ingestion Schedule (Cron Expression)
# Default: Every 6 hours at minute 0
INGESTION_CRON_SCHEDULE=0 */6 * * *

# API Rate Limiting
TMDB_REQUESTS_PER_SECOND=4
JUSTWATCH_REQUESTS_PER_SECOND=2

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Bootstrap Configuration
BOOTSTRAP_ON_START=false
BOOTSTRAP_PLATFORMS=Netflix,Amazon Prime Video,Disney+ Hotstar,Apple TV Plus,Zee5,Sony Liv

# Logging
LOG_LEVEL=info